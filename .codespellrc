[codespell]
# Ref: https://github.com/codespell-project/codespell#using-a-config-file
skip = .git*,.codespellrc
check-hidden = true
# ignore all acronyms, or mixed case
ignore-regex =  \b([A-Z]+|[a-z]+[A-Z][a-z]*)\b
# some unfortunate choices of variable names, or even typos which are now
# parts of API
ignore-words-list = te,reconet,reson,nd,scond,inout,coo,dout,parm,pyramide,ist,mot,mapp,regist,noo
